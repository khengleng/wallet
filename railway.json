{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "bash scripts/ops/railway_build.sh"
  },
  "deploy": {
    "startCommand": "bash scripts/ops/railway_start.sh",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
