ENVIRONMENT=production
DEBUG=False
SECRET_KEY=replace-with-long-random-secret
DATABASE_ISOLATION_MODE=strict
BACKOFFICE_DATABASE_URL=postgresql://user:password@host:5432/wallet_backoffice
ALLOWED_HOSTS=wallet.example.com
CSRF_TRUSTED_ORIGINS=https://wallet.example.com
AUTH_MODE=keycloak_oidc
KEYCLOAK_BASE_URL=https://id.example.com
KEYCLOAK_REALM=wallet
KEYCLOAK_CLIENT_ID=wallet-web
KEYCLOAK_CLIENT_SECRET=replace-with-client-secret
KEYCLOAK_REDIRECT_URI=https://wallet.example.com/auth/keycloak/callback/
KEYCLOAK_POST_LOGOUT_REDIRECT_URI=https://wallet.example.com/login/
KEYCLOAK_INTROSPECTION_TIMEOUT_SECONDS=3.0
KEYCLOAK_SESSION_CHECK_INTERVAL_SECONDS=120
KEYCLOAK_ROLE_GROUP_MAP=super_admin:super_admin,admin:admin,finance:finance,treasury:treasury,customer_service:customer_service,risk:risk,operation:operation,sales:sales
INTERNAL_AUTH_MODE=hmac
INTERNAL_AUTH_SHARED_SECRET=replace-with-strong-shared-secret
INTERNAL_AUTH_TIMESTAMP_SKEW_SECONDS=90
AUDIT_EXPORT_HMAC_SECRET=replace-with-strong-audit-export-secret
AUDIT_EXPORT_MAX_DAYS=90
WEB_CONCURRENCY=4
GUNICORN_THREADS=4
VAULT_ADDR=https://vault.example.com
VAULT_NAMESPACE=
VAULT_TOKEN=
VAULT_TIMEOUT_SECONDS=3
# Optional per-secret Vault mapping:
# KEYCLOAK_CLIENT_SECRET_VAULT_PATH=kv/data/wallet/prod
# KEYCLOAK_CLIENT_SECRET_VAULT_FIELD=keycloak_client_secret
